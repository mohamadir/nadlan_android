<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_weight="30"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="tech.nadlan.com.nadlanproject.Activities.MyFilesActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/logo_text"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="ניהול המסמכים שלי"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_weight="3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/uploadLinear"
        android:gravity="center"
        android:layout_height="70dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/upload_icon"
            />
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:text="העלה קובץ"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/files_listView"
        android:layout_height="0dp"
        android:layout_weight="25"></ListView>
</LinearLayout>
