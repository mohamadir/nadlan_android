<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_weight="30"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="tech.nadlan.com.nadlanproject.Activities.PintsListActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/logo_text"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="רשימת הנקודות שלי"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="* לחץ לחיצה ארוכה כדי למחוק פריט"
        android:gravity="right"
        android:textSize="14sp"
        android:layout_weight="1"/>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/points_listView"
        android:layout_height="0dp"
        android:layout_weight="25"></ListView>
</LinearLayout>
