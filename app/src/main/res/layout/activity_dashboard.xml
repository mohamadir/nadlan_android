<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="tech.nadlan.com.nadlanproject.Activities.MapActivity">

    <android.support.v7.widget.CardView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        android:id="@+id/cardView2">




        <LinearLayout
            android:id="@+id/ll_finf_your_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <android.support.v7.widget.SearchView
                android:id="@+id/actv_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:paddingStart="5dp"
                app:queryHint="חפש דירה"
                android:gravity="start"
                android:maxLines="1"
                android:background="@color/white"
                android:hint="חפש דירה"
                android:drawableEnd="@drawable/places_ic_search"
                android:textCursorDrawable="@null"
                android:completionThreshold="1"

                />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/pointDetailCard"
        android:visibility="gone"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:onClick="openDetailsActivity"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:visibility="visible"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="9dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="12">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/details_title_Tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:gravity="right"
                            android:transitionName="title_transition"
                            android:text="דירה 200 מטר , 2016"
                            android:textColor="@color/green"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/details_desc_Tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:transitionName="desc_transition"
                            android:gravity="right"
                            android:text="רח' ירושליםדגכדגכדגכדגכדגכדגכדכדגכדגכ, ירושלים"

                            android:textColor="@color/green"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="4"
                        android:visibility="visible"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="14dp">

                        <ImageView
                            android:id="@+id/imageview"
                            android:transitionName="image_transition"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/apartment" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/close"
            android:paddingTop="20dp"
            android:id="@+id/closeDetails"
            android:onClick="closeDetails"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="90dp"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent">
        <View
            android:layout_width="40dp"
            android:layout_margin="20dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:background="@color/red"
            />
        <View
            android:layout_width="40dp"
            android:layout_margin="20dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:background="@color/red"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:onClick="addNewPointActivity"
            android:src="@drawable/add_apartment"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp"
            android:onClick="myApartmentsListActivity"
            android:src="@drawable/list"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:onClick="signOutClick"
            android:src="@drawable/sign_out"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="90dp"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent">

    </LinearLayout>
</RelativeLayout>
