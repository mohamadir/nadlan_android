<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="tech.nadlan.com.nadlanproject.MainActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layoutDirection="rtl"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_height="100dp"
            android:src="@drawable/default_user"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="ערב טוב"
                android:textSize="25dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="ניר"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_height="wrap_content" />    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"

        android:background="#fff"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="#bbb"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_height="wrap_content">

            <in.shadowfax.proswipebutton.ProSwipeButton
                android:id="@+id/awesome_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bg_color="#fff"
                android:gravity="center"
                android:textAlignment="center"
                app:text_size="20dp"
                app:text_color="#000000"
                app:arrow_color="#aaaaaa"
                app:btn_text="swipe to login" />

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdfsdfsdf"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:onClick="callUs"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#7f7f7f"
            android:textStyle="bold"
            android:text="דבר איתנו"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
